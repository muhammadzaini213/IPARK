<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>

<VBox stylesheets="@style_form.css" 
      alignment="CENTER" spacing="20.0"
      xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.kelompok5.ipark.TariffController">
   <children>
      <Label fx:id="secondarylabel" text="Edit Tariff"/>

      <TextField fx:id="nameField" promptText="Nama Tarif" prefWidth="300"/>
      <VBox fx:id="dynamicInputContainer" spacing="10" prefWidth="300" />


      <Button text="Submit" prefWidth="300" prefHeight="40" onAction="#saveToDB"/>

      <Button text="Keluar" prefWidth="300" prefHeight="45" onAction="#closeForm"/>
<TableView fx:id="tariffTable" visible="false" managed="false">
    <columns>
         <TableColumn fx:id="colName" text="" prefWidth="250" />
         <TableColumn fx:id="colType" text="" prefWidth="150" />
         <TableColumn fx:id="colType" text="" prefWidth="150" />
    </columns>
</TableView>
</children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
