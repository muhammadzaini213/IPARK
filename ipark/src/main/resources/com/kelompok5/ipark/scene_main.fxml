<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox stylesheets="@style_main.css" 
      alignment="CENTER" spacing="20.0"
      xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.kelompok5.ipark.MainController">
   <children>
    <Label text="I - P A R K" style="-fx-font-weight: bold; -fx-font-size: 76px; -fx-text-fill: #FFFFFF;"/>
    <Label fx:id="secondarylabel" text="ITK Campus Parking Management System"/>
    <Button text="Kelola Kendaraan" prefWidth="300" prefHeight="45" onAction="#vehiclesOption"/>
    <Button text="Kelola Tarif" prefWidth="300" prefHeight="45" onAction="#tariffsOption"/>
    <Button text="Kelola Lokasi Parkir" prefWidth="300" prefHeight="45" onAction="#parkingOption"/>
    <!-- <Button text="Parkiran" prefWidth="300" prefHeight="45" onAction="#parklocsLocationOption"/> -->
    <!-- <Button text="Lihat Data" prefWidth="300" prefHeight="45" onAction="#allTableOption"/> -->
    <Button text="Keluar" onAction="#exit" prefWidth="300" prefHeight="45" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
